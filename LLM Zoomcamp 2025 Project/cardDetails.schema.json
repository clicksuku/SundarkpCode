{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CardDetails",
  "description": "Schema defining credit/debit card details.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "cardNumber": {
      "type": "string",
      "description": "Primary Account Number (PAN). 13â€“19 digits. Spaces are allowed for readability but will be ignored by validators that strip non-digits.",
      "pattern": "^(?:\\d[ -]?){12,18}\\d$",
      "examples": [
        "4111 1111 1111 1111",
        "5555555555554444",
        "3782 822463 10005"
      ]
    },
    "name": {
      "type": "string",
      "description": "Cardholder name as printed on the card.",
      "minLength": 2,
      "maxLength": 100,
      "examples": ["JOHN DOE", "Jane Q. Public"]
    },
    "expiryDate": {
      "type": "string",
      "description": "Expiry date in MM/YY or MM/YYYY format.",
      "pattern": "^(0[1-9]|1[0-2])\/(?:\\d{2}|\\d{4})$",
      "examples": ["12/26", "01/2027"]
    },
    "cvv": {
      "type": "string",
      "description": "Card Verification Value. 3 or 4 numeric digits.",
      "pattern": "^\\d{3,4}$",
      "examples": ["123", "1234"]
    },
    "scheme": {
      "type": "string",
      "description": "Card network brand.",
      "enum": ["VISA", "MASTERCARD", "AMEX", "DISCOVER"],
      "examples": ["VISA"]
    }
  },
  "required": ["cardNumber", "name", "expiryDate", "cvv"]
}
